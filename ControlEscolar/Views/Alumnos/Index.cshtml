
@{
    ViewBag.Title = "Index";
}
<br />
<input type="button" value="Nuevo" onclick="document.location.href='@Url.Content("~/Alumnos/NewAlumno")'" class="btn btn-primary"/>
<br />

<div id="List">

</div>

<script>
    urlGet = "@Url.Content("~/Alumnos/ListAlumnos")";

    Get();

    function Get() {
        fetch(urlGet)
            .then((res) => {
                return res.text();
            })
            .then((data) => {
                document.getElementById("List").innerHTML = data;
            });
    }

    url = "@Url.Content("~/Alumnos/DeleteAlumno")";

    function Delete(id) {
        fetch(url, {
            method: "POST",
            body: JSON.stringify({
                idAlumno: id,
            }),
            headers: {
                'Accept': "application/json",
                'Content-Type': "application/json"
            }
        }).then((res)=>{
            if (res.ok) {
                return res.text()
            } else {
                alert("Error al ejecutar")
            }
        }).then((data)=>{
            if (data != "1") {
                alert(data)
            } else {
                document.location.href= "@Url.Content("~/Alumnos")"
            }
        })
    }
</script>