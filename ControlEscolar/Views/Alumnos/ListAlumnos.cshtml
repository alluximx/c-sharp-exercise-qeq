@model IEnumerable<ControlEscolar.Models.AlumnoModel>

@{
    Layout = null;
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApellidoPaterno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApellidoMaterno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario)
        </th>
        <th></th>
    </tr>

    @foreach (System.Data.DataRow item in ViewBag.alumnos.Rows)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item["nombre"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item["apellidoPaterno"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item["apellidoMaterno"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item["usuario"])
            </td>
            <td>
                <input type="button" onclick="document.location.href='@Url.Content("~/Alumnos/Edit/?Id="+ item["idAlumno"])'" value="Editar" class="btn btn-success"/> |
                <input type="button" onclick="Delete(@item["idAlumno"])" value="Eliminar" class="btn btn-danger"/>
            </td>
        </tr>
    }

</table>