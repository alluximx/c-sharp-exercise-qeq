@model ControlEscolar.Models.AlumnoModel

@{
    ViewBag.Title = "Edit";
}

<h2>Actualiza Alumno</h2>

<form>
    <div class="row">
        @Html.HiddenFor(d => d.IdAlumno, new { id = "idAlumno" })
        <div class="form-group">
            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, new { id = "nombre" })
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.ApellidoPaterno)
            @Html.TextBoxFor(d => d.ApellidoPaterno, new { id = "apellidoPaterno" })
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.ApellidoMaterno)
            @Html.TextBoxFor(d => d.ApellidoMaterno, new { id = "apellidoMaterno" })
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.Contrasenia)
            @Html.TextBoxFor(d => d.Contrasenia, new { id = "contrasenia" })
        </div>

        <input type="button" value="Guardar" onclick="Edit()" />
    </div>
</form>

<script>
    var url = "@Url.Content("~/Alumnos/UpdateAlumno")";
    function Edit() {
        fetch(url, {
            method: "POST",
            body: JSON.stringify({
                IdAlumno: document.getElementById("idAlumno").value,
                Nombre: document.getElementById("nombre").value,
                ApellidoPaterno: document.getElementById("apellidoPaterno").value,
                ApellidoMaterno: document.getElementById("apellidoMaterno").value,
                Contrasenia: document.getElementById("contrasenia").value
            }),
            headers: {
                'Accept': "application/json",
                'Content-Type': "application/json"
            }
        }).then((res)=>{
            if (res.ok) {
                return res.text()
            } else {
                alert("Error al ejecutar")
            }
        }).then((data)=>{
            if (data != "1") {
                alert(data)
            } else {
                document.location.href= "@Url.Content("~/Alumnos")"
            }
        })
    }
</script>
