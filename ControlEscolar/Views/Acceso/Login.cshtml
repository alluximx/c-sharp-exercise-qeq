
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")

    <title>Login</title>

</head>
<body>

    <div class="sidenav">
        <div class="login-main-text">
            <h2>Control Escolar<br></h2>
            <p>Favor de Ingresar</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                <form action="@Url.Content("~/Acceso/Login")" method="post">
                    <div class="form-group">
                        <label>Usuario</label>
                        <input type="text" class="form-control" placeholder="Usuario" name="usuario">
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" class="form-control" placeholder="Contraseña" name="contrasenia">
                    </div>
                    <button type="submit" class="btn btn-black">Ingresar</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
